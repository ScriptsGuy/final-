          <body>
          <%- include('../includes/navigation.ejs') %>
            
         
      <div class="container" style="margin-top: 100px;margin-bottom: 100px;">
        
        <div class="card-group">
          <% for(favourit of posts) { %>
          <div class="card">
            <img class="card-img-top" src="<%= favourit.post.image %>" alt="Card image cap">
            <div class="card-body">
              <a href="/post/<%= favourit.post._id %>" style="font-size: 20px;"><%= favourit.post.title %> </a>

              <p class="card-text"><%= favourit.post.description %></p>
            </div>
            <form method="post" action="/admin/delete-favourit">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-danger">delete</button>
              <input type="hidden" value="<%= favourit.post._id %>" name="postId">
            </form>
            <div class="card-footer">
              <small class="text-muted"><%= favourit.post.category %></small>
            </div>
          </div>
          <% } %>
        </div>
      </div> 

          <%- include('../includes/footer.ejs') %>

<%- include('../includes/end.ejs') %>
